{% extends "app.html.twig" %}

{% block content %}
<div class="container">
    <section class="signup_form row">
        <div class="col-md-6 col-md-offset-3">
            <div class="login-panel panel panel-default">
                <div class="panel-body">
                    <form action="/login" method="POST" role="form" id="subscriptionForm">
                        <fieldset>
                            <legend>Sign in</legend>
                            <div class="col-md-12 form-group">
                                <input class="form-control" placeholder="E-mail" name="email" type="email" value="">
                            </div>

                            <div class="col-md-12 form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password" value="">
                            </div>

                            <div class="col-md-12 ">
                                <input id="remember" name="remember" type="checkbox" >
                                <label for="remember">Remember me</label>
                            </div>
                        </fieldset>

                        <button class="btn btn-primary mbtn" style="margin-left: 15px;">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
